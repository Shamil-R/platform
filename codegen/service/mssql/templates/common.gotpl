
func {{ lower .Name }}(ctx context.Context, id int) (*model.{{ .Name }}, error) {
	{{- $table := lower .Name }}
	tx, err := mssql.Begin(ctx)
	if err != nil {
		return nil, err
	}

	query := `
		SELECT * FROM [{{ $table }}]
		WHERE id = :id
	`

	arg := map[string]interface{}{
		"id": id,
	}

	stmt, err := tx.PrepareNamed(query)
	if err != nil {
		return nil, err
	}

	r := &model.{{ .Name }}{}

	if err := stmt.Get(r, arg); err != nil {
		return nil, err
	}

	return r, nil
}
