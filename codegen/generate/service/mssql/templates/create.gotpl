{{- define "create" }}
	var res {{ template "type" .Type }}

	tx, err := mssql.Begin(ctx)
	if err != nil {
		return res, err
	}

	queryInsert := `
		INSERT INTO {{ template "table" . }} (
			{{- with .Arguments.ByName "data" }}
			{{- range $i, $field := .Type.Definition.Fields }}
			{{- if gt $i 0 }}, {{ end }}
			{{ template "field" . }}
			{{- end }}
		) VALUES (
			{{- range $i, $field := .Type.Definition.Fields }}
			{{- if gt $i 0 }}, {{ end }}
			{{ template "bind" . }}
			{{- end }}
			{{- end }}
		)
	`

	resInsert, err := tx.NamedExec(queryInsert, &data)
	if err != nil {
		return res, err
	}

	id, err := resInsert.LastInsertId()
	if err != nil {
		return res, err
	}

	querySelect := `
		SELECT *
		FROM {{ template "table" . }}
		WHERE id = :id
	`

	argSelect := map[string]interface{}{
		"id": id,
	}

	stmt, err := tx.PrepareNamed(querySelect)
	if err != nil {
		return res, err
	}

	if err := stmt.Get(&res, &argSelect); err != nil {
		return res, err
	}

	return res, nil
{{- end }}