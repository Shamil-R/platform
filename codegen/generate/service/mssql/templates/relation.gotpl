{{- define "relation" }}
	var resSelect {{ template "type" .Type }}

	tx, err := mssql.Begin(ctx)
	if err != nil {
		return resSelect, err
	}

	querySelect := `
		SELECT *
		FROM {{ template "table" .Type }}
		WHERE {{ lower .Definition.Name }}_id = :id
	`
	argSelect := map[string]interface{}{
		"id": obj.ID,
	}

	stmt, err := tx.PrepareNamed(querySelect)
	if err != nil {
		return resSelect, err
	}

	if err := stmt.{{- if .Type.IsSlice }}Select{{- else }}Get{{- end }}(&resSelect, argSelect); err != nil {
		return resSelect, err
	}

	return resSelect, nil
{{- end }}