{{- define "object" }}
{{- range . }}
type {{ .Name }}{{ print " " }}{{ template "object_directives" . }} {
    {{- range .Fields }}
		{{- if .Type.IsRelation }}
			{{ .Name }}(where: {{ .Type.Name }}WhereInput): {{ .Type }}
		{{- else }}
			{{ .Name }}: {{ .Type }}
		{{- end }}
		{{- template "directives" .Directives }}
    {{- end }}
    {{ template "defaultfields" . }}
}
{{ end }}
{{- end }}