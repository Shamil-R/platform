{{- define "object_item" }}
type {{ .Name }} {
    {{- range .Fields.ForObject }}
	{{- if .Type.IsObject }}
	{{ .Name }}(where: {{ .Type.NamedType }}WhereInput): {{ .Type }}
    {{- else if .Type.IsSlice }}
	{{ .Name }}(where: {{ .Type.Elem.NamedType }}WhereInput): {{ .Type }}
	{{- else }}
	{{ .Name }}: {{ .Type }}
	{{- template "directives" .Directives }}
	{{- end }}
    {{- end }}
}
{{- end }}