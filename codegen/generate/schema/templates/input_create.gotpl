{{- define "input_create" }}
{{- $name := .Name }}
input {{ .Name }}CreateInput {
    {{- range .Fields.NotRelations }}
    {{- if not .Directives.HasIndentity }}
	{{ .Name }}: {{ .Type }}{{ template "directives" .Directives }}
	{{- end }}
    {{- end }}
	{{- range .Fields.RelationsManyToOne }}
	{{ .Name }}: {{ .Type.Name }}CreateOneWithout{{ firstRuneToUpper .Relation.Name }}Input!{{ template "directives" .Directives }}
	{{- end }}
}
{{- end }}